            <label for="name">Username:<span></span></label>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="pwd">A new Password:</label>
            </div>
            <div class="col-75">
              <input type="password" id="pwd" name="pwd" required>
            </div>
          </div>   
          <div class="row">
            <div class="col-25">
              <label for="repwd">Re-enter Password:</label>
            </div>
            <div class="col-75">
              <input type="password" id="repwd" name="repwd" required>
            </div>
          </div>
          
          <button id="change" type="submit">Update</button>
        </form>
      </div>

      <div class="footer-links">
