  <div class="profile-container">
    {{!-- <img src="/assets/images/curved0.jpg" class="cover-img"> --}}

    <div class="profile-details">
      <div class="pd-row">
        <img src="/assets/images/member-1.png" class="pd-image">
        <div>
          <h3>Anh Tuan</h3>
          <p>100 Friends - 1000 Follower</p>
        </div>
      </div>
    </div>



    <div class="nav-content">
      <a href="/user/Profile">
        <h3>Posts</h3>
      </a>

      <a class="active">
        <h3>Update Infomation</h3>
      </a>

      <a href="/user/ChangePassword">
        <h3>Change Password</h3>
      </a>
    </div>

    <!-- Main -->

    <div class="mess-container">
      <div class="mess-details">
        <h1 style="text-align: center; margin: 10px;">Update Infomation</h1>
        <form class="uploadForm" action="#">
          <div class="row">
            <div class="col-25">
              <label for="Avatar">Upload Avatar:</label>
            </div>
            <div class="col-75" style="margin-top: 15px;">
              <input name="Avatar" id="Avatar" type="file" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="name">Username:</label>
            </div>
            <div class="col-75">
              <input type="text" value="" id="name" name="name" placeholder="Your name..." required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="phone">Phone Number:</label>
            </div>
            <div class="col-75">
              <input type="text" value="" id="phone" name="phone" placeholder="Your Phone Number...(example: 0123456789)" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="Address">Address:</label>
            </div>
            <div class="col-75">
              <input type="text" value="" id="Address" name="Address" placeholder="City... (example: Ha Noi)" required>
              {{!-- <select id="country" name="country">
                <option value="australia">Australia</option>
                <option value="canada">Canada</option>
                <option value="usa">USA</option>
              </select> --}}
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="Age">Age:</label>
            </div>
            <div class="col-75">
              <input type="text" value="" id="Age" name="Age" placeholder="Age (example: 18)" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="email">Email:</label>
            </div>
            <div class="col-75">
              <input type="text" value="" id="email" name="email" placeholder="name@example.com" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for='gender'>Gender</label>
            </div>
            <div class="col-75">
              <input checked='' value="" id='gender-female' name='gender' type='radio' value='female'>
              <label for='gender-female'>Female</label>
              <input id='gender-male' name='gender' type='radio' value='male'>
              <label for='gender-male'>Male</label>
            </div>
          </div>
 
          <button id="submit" value="" type="submit">Submit</button>
        </form>
      </div>
    </div>

    <div class="footer-links">
      <a>
        <p class="mb-0 text-secondary" style="text-align: center; margin-top: 16px;">
          Copyright Â©
          <script>
            document.write(new Date().getFullYear())
          </script> Anh Tuan.
        </p>
      </a>
    </div>
  </div>

</body>

