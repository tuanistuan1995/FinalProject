      <div class="post create">
        <h2 style="text-align: center; margin: 10px;">Upload new Post</h2>

        <form class="uploadForm" action="/user/addPost" method="POST" enctype="multipart/form-data">
          <div class="row">
            <div class="col-25">
              <label>Article Title:</label>
            </div>
            <div class="col-75">
              <input type="text" placeholder="Enter name of your Post" id="title" name="title" required />
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label>Upload Image: </label>
              <img style="width: 250px; height: 250px; margin-left:200px; object-fit: contain;" id="output" />
            </div>
            <div class="col-75">
              <input name="image" id="image" type="file" onchange="loadFile(event)" required />
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label>Description:</label>
            </div>
            <div class="col-75">
              <textarea id="desc" name="desc" placeholder="Describe your post" required></textarea>
            </div>
          </div>

          <button id="submit" type="submit">Post</button>
          {{#if err}}
          <div class="alert-warning">
            {{err}}
          </div>
          {{/if}}
        </form>

      </div>


